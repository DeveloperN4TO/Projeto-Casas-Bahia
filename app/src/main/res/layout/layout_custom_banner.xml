<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:layout_gravity="center|top"
    style="@style/Style_shape_banner2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:paddingStart="5dp"
            android:src="@drawable/ic_new_logo2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Já é cliente?"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre ou cadastre-se e aprovite as melhores ofertas"
                android:textColor="@color/blue"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <Button
                android:id="@+id/btnNavegarCadastro"
                style="@style/Style_shape_botao_entrar"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:text="Entrar agora"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:onClick="onNavegarCadastroButtonClick"/>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>
